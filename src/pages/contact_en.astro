---
import Layout from '../layouts/Layout_jp.astro';
---

<Layout>
<div class="container mx-auto px-4 mt-8">
  <div class="flex flex-col md:flex-row md:items-center">
    <div class="hidden md:block md:w-1/4"></div>

    <div class="w-full md:w-1/2">

      <p class="text-base font-bold m-5 text-center">Contact</p>

      <p class="text-base m-2 text-left">For contacts, please use this email address.</p>

      <div class="m-4">
        <p class="text-xs m-1 text-left">Work/Event Appearances (or Requests to appear in works or at events)</p>
        <p class="text-xs m-1 text-left">Collaboration Requests for Live Streams/Videos</p>
        <p class="text-xs m-1 text-left">Other Messages</p>
      </div>

      <form action="./thanks_en" method="POST" data-netlify="true" name="contact">
        <div class="mb-4">
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name <span class="text-red-500">*</span></label>
            <input type="text" id="name" name="name" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"placeholder="Your name">
        </div>

        <div class="mb-4">
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">E-mail<span class="text-red-500">*</span></label>
            <input type="email" id="email" name="email" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="example@domain.com">
        </div>

        <div class="mb-6">
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message <span class="text-red-500">*</span></label>
            <textarea id="message" name="message" rows="4" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Please write your message here."></textarea>
        </div>

        <div class="flex justify-center mb-6">
            <button type="submit" class="w-full sm:w-auto inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white my-bg-color hover:opacity-80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out"> Submit </button>
        </div>
      </form>
    </div>

    <div class="hidden md:block md:w-1/4"></div>
  </div>
</div>
</Layout>